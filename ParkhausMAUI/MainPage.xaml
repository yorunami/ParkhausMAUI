<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ParkhausMAUI.ViewModels"
             x:Class="ParkhausMAUI.MainPage">

    <ContentPage.BindingContext>
        <vm:ParkingViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0F172A" Offset="0.0" />
            <GradientStop Color="#334155" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto, Auto, Auto, *" Padding="25" RowSpacing="20">

        <VerticalStackLayout Grid.Row="0" Spacing="2">
            <Label Text="🅿️ ParkApp" 
                   TextColor="White" 
                   FontSize="32" 
                   FontFamily="OpenSansSemibold" 
                   HorizontalOptions="Center"/>
            <Label Text="Smart Parking Solution" 
                   TextColor="#94A3B8" 
                   FontSize="14" 
                   FontFamily="OpenSansRegular"
                   HorizontalOptions="Center" 
                   CharacterSpacing="1.5"/>
        </VerticalStackLayout>

        <Border Grid.Row="1" Stroke="Transparent" BackgroundColor="#1E293B" 
                StrokeShape="RoundRectangle 20" Padding="20">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,5" Opacity="0.4" Radius="15"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="15">
                <Border Stroke="#475569" StrokeThickness="1" StrokeShape="RoundRectangle 12" BackgroundColor="#0F172A" Padding="15,2">
                    <Entry Text="{Binding InputText}" 
                           Placeholder="Kennzeichen (z.B. ZH 123)" 
                           PlaceholderColor="#64748B"
                           TextColor="White"
                           HeightRequest="50"
                           FontSize="16"
                           FontFamily="OpenSansRegular"/>
                </Border>

                <Grid ColumnDefinitions="Auto, *">
                    <Label Text="Etage" TextColor="#CBD5E1" VerticalOptions="Center" 
                           FontSize="16" FontFamily="OpenSansSemibold" Margin="0,0,10,0"/>

                    <Border Grid.Column="1" Stroke="#475569" StrokeThickness="1" StrokeShape="RoundRectangle 12" 
                            BackgroundColor="#0F172A" HeightRequest="48">
                        <Picker ItemsSource="{Binding Floors}" 
                                SelectedItem="{Binding SelectedFloor}"
                                TextColor="White"
                                Title="Bitte wählen"
                                FontFamily="OpenSansSemibold"
                                HorizontalTextAlignment="Center"/>
                    </Border>
                </Grid>
            </VerticalStackLayout>
        </Border>

        <CollectionView Grid.Row="3" ItemsSource="{Binding VisibleSlots}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" VerticalItemSpacing="15" HorizontalItemSpacing="15"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 20" 
                            BackgroundColor="{Binding StatusColor}" 
                            HeightRequest="120"
                            Stroke="Transparent">

                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="4,4" Opacity="0.2" Radius="8"/>
                        </Border.Shadow>

                        <Grid RowDefinitions="Auto, *, Auto" Padding="12">
                            <Label Text="{Binding SlotNumber, StringFormat='Nr. {0}'}" 
                                   TextColor="White" 
                                   FontFamily="OpenSansSemibold" 
                                   Opacity="0.9" 
                                   FontSize="12"/>

                            <StackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center">
                                <Label Text="{Binding InfoText}" 
                                       TextColor="White" 
                                       FontSize="20" 
                                       FontFamily="OpenSansSemibold"
                                       HorizontalTextAlignment="Center"
                                       LineBreakMode="TailTruncation"/>
                            </StackLayout>

                            <Grid Grid.Row="2">
                                <Button Text="PARKEN" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ParkingViewModel}}, Path=ParkInCommand}"
                                        CommandParameter="{Binding .}"
                                        IsVisible="{Binding IsFree}"
                                        BackgroundColor="White" 
                                        TextColor="#10B981"
                                        FontFamily="OpenSansSemibold"
                                        CornerRadius="14"
                                        HeightRequest="36"
                                        FontSize="12"
                                        Padding="0"
                                        Margin="0,5,0,0"/>

                                <Button Text="AUSFAHREN" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ParkingViewModel}}, Path=ParkOutCommand}"
                                        CommandParameter="{Binding .}"
                                        IsVisible="{Binding IsOccupied}"
                                        BackgroundColor="White" 
                                        TextColor="#E11D48"
                                        FontFamily="OpenSansSemibold"
                                        CornerRadius="14"
                                        HeightRequest="36"
                                        FontSize="11"
                                        Padding="0"
                                        Margin="0,5,0,0"/>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Border Grid.Row="2" Stroke="#FCD34D" StrokeThickness="0.5" BackgroundColor="#1E293B" 
                StrokeShape="RoundRectangle 50" HorizontalOptions="Center" Padding="20,8" Margin="0,5">
            <Border.Shadow>
                <Shadow Brush="#FCD34D" Offset="0,0" Opacity="0.5" Radius="10"/>
            </Border.Shadow>
            <Label Text="{Binding StatusMessage}" 
                   TextColor="#FCD34D" 
                   FontSize="13" 
                   FontFamily="OpenSansSemibold" 
                   HorizontalOptions="Center"/>
        </Border>

    </Grid>
</ContentPage>